<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">

    <t t-name="ai_analyst.AiAnalystDashboardAction">
        <div t-att-class="'p-3 h-100 d-flex flex-column aiAnalystApp aiDashboardRoot ' + (state.consoleMode ? 'aiConsoleMode' : '')">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">AI Dashboards</h4>
                <div class="d-flex align-items-center gap-2">
                    <label class="form-check form-switch m-0 d-flex align-items-center gap-1">
                        <input class="form-check-input" type="checkbox" t-att-checked="state.consoleMode" t-on-change="toggleConsoleMode"/>
                        <span class="small">Console Mode</span>
                    </label>
                    <button class="aiBtn aiBtnGhost" t-on-click="load">Reload</button>
                </div>
            </div>
            <div t-if="state.loading" class="text-muted">Loading dashboard...</div>
            <t t-else="">
                <div class="text-muted mb-2">
                    <t t-if="state.dashboard"><t t-esc="state.dashboard.name"/></t>
                    <t t-else="">Dashboard</t>
                </div>

                <div class="row g-3">
                    <t t-foreach="state.widgets" t-as="w" t-key="w.id">
                        <div t-att-class="'col-12 col-lg-' + (w.width || 6)">
                            <div class="card h-100 aiDashboardCard">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <strong><t t-esc="w.title"/></strong>
                                    <div class="btn-group btn-group-sm">
                                        <button class="aiBtn aiIconBtn" t-on-click="() => this.refreshWidget(w.id, true)">Refresh</button>
                                        <button class="aiBtn aiIconBtn" t-on-click="() => this.editTitle(w.id)">Edit</button>
                                        <button class="aiBtn aiIconBtn aiDanger" t-on-click="() => this.removeWidget(w.id)">Remove</button>
                                    </div>
                                </div>
                                <div class="card-body" t-att-style="'min-height:' + ((w.height || 4) * 70) + 'px'">
                                    <div t-if="state.widgetLoading[w.id]" class="text-muted">Loading...</div>
                                    <t t-set="res" t-value="state.results[w.id]"/>
                                    <div t-if="res and res.error" class="alert alert-warning mb-2"><t t-esc="res.error"/></div>
                                    <div t-if="res and res.answer" class="mb-2"><t t-esc="res.answer"/></div>

                                    <div t-if="res and res.kpis and res.kpis.length" class="d-flex flex-wrap gap-2 mb-2">
                                        <t t-foreach="res.kpis" t-as="kpi" t-key="kpi.label">
                                            <div class="border rounded p-2" style="min-width:120px;">
                                                <div class="text-muted" style="font-size:11px;"><t t-esc="kpi.label"/></div>
                                                <div class="fw-bold"><t t-esc="kpi.value"/></div>
                                            </div>
                                        </t>
                                    </div>

                                    <div t-if="res and res.table and res.table.columns" class="table-responsive mb-2">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <t t-foreach="res.table.columns" t-as="c" t-key="c.key"><th><t t-esc="c.label"/></th></t>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="(res.table.rows || [])" t-as="r" t-key="r.channel || r.name || JSON.stringify(r)">
                                                    <tr>
                                                        <t t-foreach="res.table.columns" t-as="c" t-key="c.key"><td><t t-esc="r[c.key]"/></td></t>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div t-if="res and res.chart" t-att-data-widget-chart="w.id" style="height:220px;">
                                        <canvas></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </div>
    </t>

</templates>
