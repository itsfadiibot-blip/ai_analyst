        <!-- ============================================================
             MULTI-COMPANY RULES
             ============================================================ -->

        <record id="rule_conversation_company" model="ir.rule">
            <field name="name">AI Analyst: Conversation multi-company</field>
            <field name="model_id" ref="model_ai_analyst_conversation"/>
