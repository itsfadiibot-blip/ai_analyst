<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         PROVIDER CONFIGURATION VIEWS
         ============================================================ -->

    <!-- Tree View -->
    <record id="view_provider_config_tree" model="ir.ui.view">
        <field name="name">ai.analyst.provider.config.tree</field>
        <field name="model">ai.analyst.provider.config</field>
        <field name="arch" type="xml">
            <tree string="AI Providers">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="provider_type" widget="badge"/>
                <field name="model_name"/>
                <field name="is_default" widget="boolean_toggle"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="fallback_provider_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_provider_config_form" model="ir.ui.view">
        <field name="name">ai.analyst.provider.config.form</field>
        <field name="model">ai.analyst.provider.config</field>
        <field name="arch" type="xml">
            <form string="AI Provider Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Claude Sonnet (Production)"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Provider">
                            <field name="provider_type"/>
                            <field name="model_name"/>
                            <field name="api_key_param"
                                   placeholder="env:ANTHROPIC_API_KEY or param.name"/>
                            <field name="api_base_url" placeholder="Leave empty for default"/>
                        </group>
                        <group string="Model Parameters">
                            <field name="temperature"/>
                            <field name="max_tokens"/>
                            <field name="timeout_seconds"/>
                            <field name="max_retries"/>
                        </group>
                    </group>
                    <group>
                        <group string="Status">
                            <field name="is_active"/>
                            <field name="is_default"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Fallback &amp; Company">
                            <field name="fallback_provider_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <strong>API Key Configuration:</strong>
                        <ul>
                            <li>Use <code>env:VARIABLE_NAME</code> to read from an environment variable (recommended)</li>
                            <li>Or enter a system parameter key name to read from Settings &gt; Technical &gt; Parameters</li>
                            <li>Never hardcode API keys in the configuration</li>
                        </ul>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ai_analyst_provider_config" model="ir.actions.act_window">
        <field name="name">Provider Configuration</field>
        <field name="res_model">ai.analyst.provider.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your first AI provider
            </p>
            <p>
                Set up an AI provider (Anthropic Claude, OpenAI, etc.) to enable the AI Analyst.
                You'll need an API key from your chosen provider.
            </p>
        </field>
    </record>

</odoo>
