<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ai_analyst_dashboard_tree" model="ir.ui.view">
        <field name="name">ai.analyst.dashboard.tree</field>
        <field name="model">ai.analyst.dashboard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="is_default"/>
            </tree>
        </field>
    </record>

    <record id="view_ai_analyst_dashboard_form" model="ir.ui.view">
        <field name="name">ai.analyst.dashboard.form</field>
        <field name="model">ai.analyst.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="is_default"/>
                    </group>
                    <field name="widget_ids">
                        <tree editable="bottom">
                            <field name="title"/>
                            <field name="tool_name"/>
                            <field name="sequence"/>
                            <field name="width"/>
                            <field name="height"/>
                            <field name="refresh_interval_seconds"/>
                            <field name="active"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ai_analyst_dashboards" model="ir.actions.client">
        <field name="name">Dashboards</field>
        <field name="tag">ai_analyst_dashboard</field>
        <field name="target">main</field>
    </record>

</odoo>
