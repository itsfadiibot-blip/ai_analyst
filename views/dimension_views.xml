<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ai_dimension_tree" model="ir.ui.view">
        <field name="name">ai.analyst.dimension.tree</field>
        <field name="model">ai.analyst.dimension</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence"/>
                <field name="name"/>
                <field name="code"/>
                <field name="model_name"/>
                <field name="field_name"/>
                <field name="company_id"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_ai_dimension_form" model="ir.ui.view">
        <field name="name">ai.analyst.dimension.form</field>
        <field name="model">ai.analyst.dimension</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="model_name"/>
                        <field name="field_name"/>
                        <field name="sequence"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="is_active"/>
                    </group>
                    <notebook>
                        <page string="Synonyms">
                            <field name="synonym_ids">
                                <tree editable="bottom">
                                    <field name="priority"/>
                                    <field name="synonym"/>
                                    <field name="canonical_value"/>
                                    <field name="match_type"/>
                                    <field name="is_active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ai_dimension_synonym_tree" model="ir.ui.view">
        <field name="name">ai.analyst.dimension.synonym.tree</field>
        <field name="model">ai.analyst.dimension.synonym</field>
        <field name="arch" type="xml">
            <tree>
                <field name="dimension_id"/>
                <field name="priority"/>
                <field name="synonym"/>
                <field name="canonical_value"/>
                <field name="match_type"/>
                <field name="company_id"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_ai_season_config_tree" model="ir.ui.view">
        <field name="name">ai.analyst.season.config.tree</field>
        <field name="model">ai.analyst.season.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="company_id"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_ai_season_config_form" model="ir.ui.view">
        <field name="name">ai.analyst.season.config.form</field>
        <field name="model">ai.analyst.season.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="is_active"/>
                    </group>
                    <notebook>
                        <page string="Tag Patterns">
                            <field name="tag_pattern_ids">
                                <tree editable="bottom">
                                    <field name="pattern"/>
                                    <field name="match_type"/>
                                    <field name="is_active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ai_season_pattern_tree" model="ir.ui.view">
        <field name="name">ai.analyst.season.tag.pattern.tree</field>
        <field name="model">ai.analyst.season.tag.pattern</field>
        <field name="arch" type="xml">
            <tree>
                <field name="season_config_id"/>
                <field name="pattern"/>
                <field name="match_type"/>
                <field name="company_id"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="action_ai_dimension" model="ir.actions.act_window">
        <field name="name">Dimensions</field>
        <field name="res_model">ai.analyst.dimension</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_ai_dimension_synonym" model="ir.actions.act_window">
        <field name="name">Dimension Synonyms</field>
        <field name="res_model">ai.analyst.dimension.synonym</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_ai_season_config" model="ir.actions.act_window">
        <field name="name">Season Configuration</field>
        <field name="res_model">ai.analyst.season.config</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_ai_season_pattern" model="ir.actions.act_window">
        <field name="name">Season Tag Patterns</field>
        <field name="res_model">ai.analyst.season.tag.pattern</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_ai_analyst_configuration"
              name="Configuration"
              parent="menu_ai_analyst_admin"
              sequence="40"
              groups="ai_analyst.group_ai_admin"/>

    <menuitem id="menu_ai_dimension"
              name="Dimensions"
              parent="menu_ai_analyst_configuration"
              action="action_ai_dimension"
              sequence="10"
              groups="ai_analyst.group_ai_admin"/>

    <menuitem id="menu_ai_dimension_synonym"
              name="Dimension Synonyms"
              parent="menu_ai_analyst_configuration"
              action="action_ai_dimension_synonym"
              sequence="20"
              groups="ai_analyst.group_ai_admin"/>

    <menuitem id="menu_ai_season_config"
              name="Season Config"
              parent="menu_ai_analyst_configuration"
              action="action_ai_season_config"
              sequence="30"
              groups="ai_analyst.group_ai_admin"/>

    <menuitem id="menu_ai_season_pattern"
              name="Season Tag Patterns"
              parent="menu_ai_analyst_configuration"
              action="action_ai_season_pattern"
              sequence="40"
              groups="ai_analyst.group_ai_admin"/>

</odoo>
