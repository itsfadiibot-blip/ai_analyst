<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_field_kb_model_tree" model="ir.ui.view">
        <field name="name">ai.analyst.field.kb.model.tree</field>
        <field name="model">ai.analyst.field.kb.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_description"/>
                <field name="module_ids"/>
                <field name="is_queryable"/>
                <field name="record_count_approx"/>
                <field name="field_count"/>
                <field name="last_refreshed_at"/>
            </tree>
        </field>
    </record>

    <record id="view_field_kb_model_form" model="ir.ui.view">
        <field name="name">ai.analyst.field.kb.model.form</field>
        <field name="model">ai.analyst.field.kb.model</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_rebuild_kb" type="object" string="Refresh This Model" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="model_description" readonly="1"/>
                        <field name="module_ids" readonly="1"/>
                        <field name="is_queryable"/>
                        <field name="record_count_approx" readonly="1"/>
                        <field name="signature" readonly="1"/>
                        <field name="last_refreshed_at" readonly="1"/>
                        <field name="synonyms"/>
                        <field name="semantic_tags"/>
                        <field name="admin_notes"/>
                    </group>
                    <notebook>
                        <page string="Fields">
                            <field name="field_ids">
                                <tree editable="bottom">
                                    <field name="name" readonly="1"/>
                                    <field name="field_label" readonly="1"/>
                                    <field name="ttype" readonly="1"/>
                                    <field name="store" readonly="1"/>
                                    <field name="sensitivity"/>
                                    <field name="synonym_count" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_field_kb_models" model="ir.actions.act_window">
        <field name="name">Field KB Models</field>
        <field name="res_model">ai.analyst.field.kb.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_field_kb_field_tree" model="ir.ui.view">
        <field name="name">ai.analyst.field.kb.field.tree</field>
        <field name="model">ai.analyst.field.kb.field</field>
        <field name="arch" type="xml">
            <tree>
                <field name="kb_model_id"/>
                <field name="name"/>
                <field name="field_label"/>
                <field name="ttype"/>
                <field name="store"/>
                <field name="sensitivity"/>
                <field name="synonym_count"/>
                <field name="short_description"/>
            </tree>
        </field>
    </record>

    <record id="view_field_kb_field_form" model="ir.ui.view">
        <field name="name">ai.analyst.field.kb.field.form</field>
        <field name="model">ai.analyst.field.kb.field</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="kb_model_id" readonly="1"/>
                        <field name="name" readonly="1"/>
                        <field name="field_label" readonly="1"/>
                        <field name="ttype" readonly="1"/>
                        <field name="relation" readonly="1"/>
                        <field name="store" readonly="1"/>
                        <field name="index" readonly="1"/>
                        <field name="required" readonly="1"/>
                        <field name="readonly" readonly="1"/>
                        <field name="help_text" readonly="1"/>
                        <field name="source_module" readonly="1"/>
                        <field name="signature" readonly="1"/>
                        <field name="short_description"/>
                        <field name="semantic_tags"/>
                        <field name="sensitivity"/>
                        <field name="admin_notes"/>
                    </group>
                    <group string="Synonyms">
                        <field name="synonym_ids">
                            <tree editable="bottom">
                                <field name="term"/>
                                <field name="source"/>
                                <field name="confidence"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_field_kb_fields" model="ir.actions.act_window">
        <field name="name">Field KB Fields</field>
        <field name="res_model">ai.analyst.field.kb.field</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_field_kb_synonyms" model="ir.actions.act_window">
        <field name="name">Field KB Synonyms</field>
        <field name="res_model">ai.analyst.field.kb.synonym</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_field_kb_synonym_tree" model="ir.ui.view">
        <field name="name">ai.analyst.field.kb.synonym.tree</field>
        <field name="model">ai.analyst.field.kb.synonym</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="term"/>
                <field name="kb_field_id"/>
                <field name="source"/>
                <field name="confidence"/>
            </tree>
        </field>
    </record>

    <record id="action_field_kb_unmapped" model="ir.actions.act_window">
        <field name="name">Field KB Unmapped Terms</field>
        <field name="res_model">ai.analyst.field.kb.unmapped.log</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('resolved','=',False)]</field>
    </record>

    <record id="view_field_kb_unmapped_tree" model="ir.ui.view">
        <field name="name">ai.analyst.field.kb.unmapped.log.tree</field>
        <field name="model">ai.analyst.field.kb.unmapped.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="term"/>
                <field name="occurrence_count"/>
                <field name="last_seen_at"/>
                <field name="query_text"/>
                <field name="resolved"/>
            </tree>
        </field>
    </record>
</odoo>
